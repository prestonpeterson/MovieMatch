<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.moviematch.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment">
        <action
            app:exitAnim="@anim/nav_default_exit_anim"
            android:id="@+id/action_loginFragment_to_movieSelectFragment"
            app:destination="@id/movieSelectFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/movieSelectFragment"
        android:name="com.moviematch.MovieSelectFragment"
        android:label="movie_select_fragment"
        tools:layout="@layout/movie_select_fragment" />
</navigation>